<% list.forEach( function(item){ %>
<div class="container col-sm-10 offset-sm-1">
  <div class="col-sm-12">
    <p> Thing: <%= item.thing%></p>
    <p> Time:  <%= item.time%></p>
    <p> Id:  <%= item._id%></p>
  </div>
</div>
<% });}%>

